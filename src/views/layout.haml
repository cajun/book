!!! 1.1
%html
  %head
    %link{:rel => "stylesheet", :href => "/stylesheets/grid.css", :type => "text/css", :media => "screen, projection"}
    %link{:rel => "stylesheet", :href => "/stylesheets/text.css", :type => "text/css", :media => "screen, projection"}

  = page_cached_timestamp
  %body
    #page
      #header-left
        %h1 
          %span.keyword require 
          %span.string 'cookbook'

      #header-right
        %span # =>
        %a{ :href => '/' } Home
        
        - if( Chef.current )
          %h2== Welcome #{Chef.current}
        -else
          %a{ :href => '/chef/new' } Register
          %a{ :href => '/login' } Login
        


      #content
        =yield

      #footer
        #version
          == You are running Sinatra v#{Sinatra::VERSION} it's cool
        #last_deploy 
          %p
            %span.keyword Last Deploy Date  
            %span =>
            %span.string= deploy_date
          %p
            %span.keyword Last Message
            %span =>
            %span.string= deploy_message
          %p
            %a{ :href => '/features_report.html' } Last Test Run
  %head
    %title require 'cookbook'
    %script{ :type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js' }
  