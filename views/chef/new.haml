#info
  %h2 Create your new chef
 
%form{ :action => '/chef/create', :method => "post" }
  .full_width
    %label{ :for => 'chef[login]' } Login
    %input{ :name => 'chef[login]', :id => 'chef[login]' }
          
  .full_width
    %label{ :for => 'chef[password]' } Password
    %input{ :name => 'chef[password]', :id => 'chef[password]' }
          
  .full_width
    %label{ :for => 'chef[first_name]' } First Name
    %input{ :name => 'chef[first_name]', :id => 'chef[fisrt_name]' }
          
  .full_width
    %label{ :for => 'chef[last_name]' } Last Name
    %input{ :name => 'chef[last_name]', :id => 'chef[last_name]' }
          
  .full_width
